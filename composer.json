{
    "name": "hxc/hxc-tool-laravel",
    "description": "laravel开发工具",
    "minimum-stability": "dev",
    "license": "MIT",
    "authors": [
        {
            "name": "韩韩韩",
            "email": "3365997294@qq.com"
        }
    ],
    "require": {
        "laravel/framework": "^8.0",
        "dingo/api": "^3.0",
        "overtrue/laravel-lang": "~5.0",
        "overtrue/easy-sms": "~1.3.2"
    },
    "autoload": {
        "psr-4": {
            "Hxc\\HxcLaravelTool\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hxc\\HxcLaravelTool\\ServiceProvider"
            ],
            "aliases": {
                "HxcToolLaravel": "Hxc\\HxcLaravelTool\\Facades\\HxcToolLaravel"
            }
        }
    },
    "scripts": {
        "post-package-install": [
            "@php artisan lang:publish zh_CN",
            "@php artisan vendor:publish --tag=hxc-config",
            "@php artisan vendor:publish --tag=hxc-functions",
            "@php artisan vendor:publish --tag=hxc-routes",
            "@php artisan vendor:publish --provider=\"Dingo\\Api\\Provider\\LaravelServiceProvider\""
        ]
    }
}
